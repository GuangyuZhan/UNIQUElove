.content{
	width: 100vw;
	height: 100vh;
	overflow: hidden;
	position: relative;
}

.content image{
		width: 100%;
		height: 100%;
}

.hold{
	position: absolute;
	top: 36%;
	left: 50%;
	transform: translate(-50%,-50%);
	color: var(--themeColor);
	font-size: 40rpx;
	font-weight: 800;
	margin: 0;
	padding: 0;
}

.hold input{
	margin-top: 50rpx;
	width: 340rpx;
	height: 60rpx;
	border-radius: 20rpx;
	border: 6rpx solid rgb(66, 148, 151);
}

.content .love{
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%,-50%);
	height: 120rpx;
	width: 120rpx;
}